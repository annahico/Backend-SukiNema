{
  "compilerOptions": {
    "target": "es2022",     // o 'esnext', 'es2017' o superior
    "module": "esnext",     // o 'es2022', 'esnext', 'system', 'node16', 'nodenext'
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
